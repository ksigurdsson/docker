###############################################################################
# Docker Makefile
###############################################################################

# -----------------------------------------------------------------------------
# The first target is help
# -----------------------------------------------------------------------------

help:
	@echo ""
	@echo "The following targets are available:"
	@echo "------------------------------------"
	@egrep '^[0-9a-zA-Z\#_-]+:' Makefile | cut -f1 -d":" | uniq | more
	@echo ""

# -----------------------------------------------------------------------------
# Build Targets
# -----------------------------------------------------------------------------

build-1604:
	@python3.4 -m http.server --bind 127.0.0.1 8000; docker build --file Dockerfile-16.04 --tag vivado:2016-3/16.04 .

.PHONY:
